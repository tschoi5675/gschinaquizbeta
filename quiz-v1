    <script>
        const quizContent = document.getElementById('quiz-content');
        const answerButtons = document.querySelectorAll('.answer-btn');
        const learnButton = document.getElementById('learn-button'); // Get the learn button
        const quizButton = document.getElementById('quiz-button');
        const learnSection = document.getElementById('learn-section'); // Get the learn section
        const backButton = document.querySelector('.back-button');

        let currentQuestion = 1;
        let score = 0;
        let answeredQuestions = new Set();

        answerButtons.forEach(button => {
            button.addEventListener('click', () => {
                const questionNumber = parseInt(button.dataset.question);
                const answer = parseInt(button.dataset.answer);

                if (answeredQuestions.has(questionNumber)) {
                    return; // Prevent answering already answered questions
                }

                answeredQuestions.add(questionNumber);
                disableQuestionButtons(questionNumber); // Disable buttons after an answer

                let isCorrect = false;
                let correctAnswers = [];

                switch (questionNumber) {
                    case 1:
                        correctAnswers = [1, 2, 3, 4, 6];
                        break;
                    case 2:
                        correctAnswers = [1, 2, 3, 4, 5];
                        break;
                    case 3:
                        correctAnswers = [1, 2, 3, 4];
                        break;
                    case 4:
                        correctAnswers = [4];
                        break;
                    case 5:
                        correctAnswers = [4];
                        break;
                    case 6:
                        correctAnswers = [4];
                        break;
                    case 7:
                        correctAnswers = [4];
                        break;
                    case 8:
                        correctAnswers = [4];
                        break;
                    case 9:
                        correctAnswers = [4];
                        break;
                    case 10:
                        correctAnswers = [1,2,4];
                        break;
                    case 11:
                         correctAnswers = [1,2,3,4];
                         break;
                    case 12:
                        correctAnswers = [4];
                        break;
                    case 13:
                        correctAnswers = [1,2,4];
                        break;
                    case 14:
                        correctAnswers = [4];
                        break;
                    case 15:
                        correctAnswers = [1,2,3,4];
                        break;
                }

                if (correctAnswers.includes(answer)) {
                    isCorrect = true;
                    score++;
                    button.classList.add('correct');
                } else {
                    button.classList.add('incorrect');
                }

                const feedbackElement = document.getElementById(`feedback${questionNumber}`);
                if (feedbackElement) {
                    feedbackElement.textContent = isCorrect ? "Correct!" : "Incorrect!";
                    feedbackElement.classList.add(isCorrect ? 'correct' : 'incorrect');
                }

                currentQuestion++;
                if (currentQuestion > 15) {
                    endQuiz();
                }
            });
        });

        function disableQuestionButtons(questionNumber) {
            const buttons = document.querySelectorAll(`.answer-btn[data-question="${questionNumber}"]`);
            buttons.forEach(button => {
                button.disabled = true;
            });
        }

        function endQuiz() {
            quizContent.innerHTML = `
                <div class="text-center">
                    <h2 class="text-3xl font-semibold text-purple-600 mb-4">Quiz Ended!</h2>
                    <p class="text-lg text-gray-700 mb-6">Your Score: ${score} / 15</p>
                    <button class="reset-button bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2.5 px-5 rounded-md transition duration-300 ease-in-out" onclick="resetQuiz()">Play Again</button>
                </div>
            `;
        }

        function resetQuiz() {
            currentQuestion = 1;
            score = 0;
            answeredQuestions.clear();
            quizContent.innerHTML = `
                <div class="question-card">
                    <h2 class="question-title">1. What happened during the Chinese people's war of resistance against Japanese aggression?</h2>
                    <div class="space-y-2">
                        <button class="answer-btn" data-question="1" data-answer="1">Japan invaded and took over northeast China in 1931.</button>
